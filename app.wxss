/**app.wxss**/
@import 'weui.wxss';
@import 'icon.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.font-12{
  font-size: 12px;
}
.font-14{
  font-size: 14px;
}
.font-16{
  font-size: 16px;
}
.text-1e6ce8{
  color: #1e6ce8;
}
.text-333{
  color: #333;
}
.text-center{
  text-align: center!important
}
.text-left{
  text-align: left!important
}
.text-right{
  text-align: right
}
.purple-bg{
  background: #1e6ce8;

}
.gray-bg{
  background: #aaa!important;
  border:1px solid #aaa!important;
}
page{
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
  padding: 40px;
}
.page__bd {
  padding-bottom: 4%;
}
.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft{
  text-align: center;
  padding:0 0 10px;
  padding:0 0 calc(10px + constant(safe-area-inset-bottom));
  padding:0 0 calc(10px + env(safe-area-inset-bottom));
}


.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}
.weui-cell_example:before{
  left:52px;
}
.empty{
  color:#AAAAAA;
  margin: 15% auto;
  text-align: center;
}
.empty icon{
  font-size: 96px;
  margin-bottom: 25px;
}
.color-blue{
  color:#1e6ce8
}
.color-red{
  color:#f97268
}
.color-gray{
  color:#666
}
.color-fff{
  color:#fff
}
.d-inline-block{
  display: inline-block;
}
.d-block{
  display: block;
}
.JQbtn{
  border: 1px solid #1e6ce8;
  background-color: #1e6ce8;
  color:#fff;
  font-size: 28rpx;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
}
.loadingWrapper{
  margin:80rpx auto;
  text-align: center;
}

/*客服*/
.customer-icon{
  position: fixed;
  font-size: 36rpx;
  bottom: 0rpx;
  color: #1e6ce8;
  right: 20rpx;
}
.customer-icon icon{
  font-size: 108rpx;
  position: relative;
}
/*详情按钮*/
.top-btn{
  margin-left: 5px;
}
.top-btn.van-button--small {
  background-color: #1e6ce8;
  border: 1px solid #1e6ce8;
  color: #fff;
}
/*表格*/
.table {
  border: 1px solid #eee;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
  margin-top: 20px;
  }
  
  .tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
  }
  
  .th, .td {
  height: 64rpx;
  line-height: 64rpx;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
  text-align: center;
  width: 100%;
  font-size:20rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  }
  
  .th {
  font-weight: 400;
  background-color: #f9f9f9;
  }
  .th1{
    width:20%;
    
  }
  .th2{
    width:30%;
  }
  .th3{
    width:25%;
  }
  .th4{
    width:25%;
  }
  .th5{
      width:50%;
      padding-left: 1px;
    }
  .rowColor{
    background-color: #f9f9f9;
  }
  .icon-btn{
    color: #1e6ce8;
  }
  /*弹出层*/
.pop-bg{
  background: none!important;
  position: relative;
}
.active-close-btn{
  position: absolute;
  bottom: 0;
  width: 100px;
  text-align: center;
  height: 45px;
  left:50%;
  margin-left: -50px;

}
.share-btn{
  position: relative;
  top: 5rpx;
  padding: .1em .5em!important;
  background-color: #fff!important;
  color: #6B7EFF!important;
  font-size: 14px!important;

}
.activity-bg.official{
  position: relative;
}
.official-img{
  width: 290px;
}
.official-close-btn {
  position: absolute;
  top: 0;
  width: 50px;
  text-align: center;
  height: 45px;
  right: 0%;
}
.official-go-btn{
  position: absolute;
  bottom: 3%;
  width: 240px!important;
  text-align: center;
  height: 45px;
  left: 25px;
  border: 0!important;
}
 
