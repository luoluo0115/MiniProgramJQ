/* pages/me/wallet/wallet.wxss */

page{
    background-color: #EDEDED;
}
.top-wrapper{
    background: #1e6ce8;
    color: #fff;
    padding: 20rpx 0rpx 120rpx;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}
.account-wrapper{
    background: #fff;
    border-radius: 15px;
    margin-top: -15%;
    padding: 30rpx 10rpx;
    position: relative;
}
.account-wrapper .title{
    font-size: 48rpx;
    font-weight: 400;
    color: #1e6ce8;
    text-align: center;
}
.account-wrapper .sub{
    font-size: 28rpx;
    color: #1e6ce8;
    text-align: center;
}
.account-wrapper .item{
    padding: 3% 0
}
.account-wrapper .item:first-child,.account-wrapper .item:nth-child(2),.account-wrapper .item:nth-child(3){ 
    border-bottom:1px dashed #EAE7E7; 

}
.account-wrapper  strong,.account-wrapper text{
    display: block;
    line-height: 1.6;
}
.account-wrapper strong{
    color: #1e6ce8;
    font-size: 16px
}
.account-wrapper text{
    color:#AAAAAA ;
    font-size: 12px
}
.account-wrapper .weui-flex__item{
    text-align: center;
}

.grids-content{
    position: relative;
}

.grids-content .title{
  font-size: 14px;
  padding: 10px;
  overflow: hidden;
}
.grids-content .text{
  border-left:2px solid #1e6ce8;
  padding-left:10px;
  display: inline-block;
  height: 16px;
  line-height: 16px;
  color: #333;
}
.grids-wrapper{
    background: #fff;
    border-radius: 15px;
}
.grids-wrapper .weui-grid{
  text-align: center;
}
.grids-wrapper .weui-grid__icon {
  display: inline-block;
  width: 56rpx;
  height: 56rpx;
}
.grids-wrapper .weui-grid__label{
  font-size: 32rpx;
  color: #666;
  margin-left: 10rpx;
  margin-top: 0;
  display: inline-block;
  position: relative;

}
.weui-grid {  
    width:50%;
}  
.no-data{
    font-size: 14px;
    color:#999;
    padding: 30px;
    text-align: center;
}
.wallet-list{
    background-color: #fff;
    border-radius: 25rpx;
    padding: 40rpx 10rpx;
}
.wallet-list .title{
    font-size: 14px;
    padding: 10px;
    overflow: hidden;
}
.wallet-list .text{
    border-left:2px solid #1e6ce8;
    padding-left:10px;
    display: inline-block;
    height: 16px;
    line-height: 16px;
    color: #333;
}
