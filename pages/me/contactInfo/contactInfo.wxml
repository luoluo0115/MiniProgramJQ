<!--pages/me/contactInfo/contactInfo.wxml-->
<view class="section">
    <view class="page">
        <view class="page__bd page__bd_spacing">
            <view class="invoice-list">
                <view class="item weui-flex" wx:for="{{customerList}}" wx:key >
                    <view class="weui-flex__item left">
                        <view class="name">{{item.title}}: {{item.name}}</view>
                        <view class="time">手机: {{item.mp}}</view>
                   
                   </view>
                    <view class="right">
                        <view class="time">邮箱: {{item.mail}}</view>
                         <view class="time"> </view>
                       
                    </view>
                </view>
                
            </view>
        </view>
    </view>
</view>
