/* pages/product/index/index.wxss */
.side-image{
    width:100%;
    height: 140px;
    border-radius: 10rpx;

}
.area-list {
    padding-top: 8px ;
}
.area-list .area-item .area-title{
    font-size: 14px;
    padding: 10px 0 ;
    overflow: hidden;

}
.area-list .area-item .area-title .area-text{
    border-left:2px solid #1e6ce8;
    padding-left:10px;
    display: inline-block;
    height: 16px;
    line-height: 16px;
    float:left;

}
.area-list .area-item .area-title .area-more{
    display: inline-block;
    position: relative;
    top: -8px;
    float:right;
    height: 16px;
}
.area-list .area-item .area-title icon{
    color:#1e6ce8;
}
.area-list .area-banner {
    border-radius: 6px;
    margin-bottom: 10px;
    position: relative;
}
swiper {
    height: 140px;
    margin: 20rpx 20rpx 0;
}
.swiper-item{
    border-radius: 10rpx;
}
.area-banner-list{
    /* padding: 15px;
    background: #f7f8fc; */
    /* padding: 15px; */
    border-bottom:1px solid #f7f8fc ;
    margin-bottom: 16px;
    height: 100%;
    width: 100%;
    max-height: 100%;
    background-repeat:no-repeat;
    background-size:100% 100%;
} 
.area-banner-list .area-banner-item{
    padding:8px 15px;
}  
.area-banner-list .title{
    font-size: 32rpx;
    font-weight: 500;
    text-align: left;
    color: #fff;
} 
.area-banner-list .sub{
    font-size: 26rpx;
    color: #000;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
    text-align: left;
    margin: 10rpx 0;
    height: 116rpx;
    word-wrap: break-word;
    word-break: break-all;
    white-space: pre-line;
} 
.area-banner-list .price{
    font-size: 36rpx;
    /* color: #1e6ce8; */
    color: #fa1139;
    text-align: left;
} 
.btn-right{
    display: -webkit-inline-flex;
    display: inline-flex; 
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
}
.area-banner-list .btn{
    /* background-color: #1e6ce8;
     color: #fff; */
     /* background-image: linear-gradient(to top bottom, #f9f9f9  , #fff); */
     background-color: #3a67e4;
    color: #fff;
    border: none;
    vertical-align: middle;
    /* display: table-cell; */

} 
.userNum{
    color: #999999;
    font-size: 22rpx;
    text-align: left;
    line-height: 33px;
    vertical-align: bottom;
}

