/* 隐藏scroll-view滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tab-view {
  width: 160rpx;
  position: fixed;
  left: 0;
  top: 102rpx;
  z-index: 10;
  background-color: #f9f9f9;
  height: 100%;
}

.tab-bar-item {
  width: 180rpx;
  height: 110rpx;
  background: #f5f5f5;
  box-sizing: border-box;
  display:flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #444;
  font-weight: 400;
  text-align: center;
}

.tab-bar-item.active {
  position: relative;
  color: #1e6ce8;
  background-color: #fff;

}
.tab-bar-item.active::before {
  content: "";
  position: absolute;
  border-left: 6rpx solid #1e6ce8;
  height: 100%;
  left: 0;

}



