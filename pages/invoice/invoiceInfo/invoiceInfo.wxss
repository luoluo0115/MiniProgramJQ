/* pages/invoice/invoiceInfo/invoiceInfo.wxss */
.van-tabs__line {
    background-color: #1e6ce8 !important;
}

.invoice {
    padding-top: 8px;
}

.invoice .invoice-item .area-title {
    font-size: 24rpx;
    padding: 10px 0;
    overflow: hidden;

}

.invoice .invoice-item .area-title .area-text {
    border-left: 2px solid #1e6ce8;
    padding-left: 10px;
    display: inline-block;
    height: 16px;
    line-height: 16px;
    float: left;

}

.invoice-info-list {
    border: 1px solid #eee;
    border-radius: 5rpx;

}

.invoice-header-list {
    padding: 10px 16px;
    margin-bottom: 20rpx;
    border-radius: 5rpx;
    border: 1px solid #eee;
}

.invoice-header-list .title {
    font-size: 24rpx;
    color: #666;
}

.invoice-header-list .sub {
    font-size: 22rpx;
    margin-top: 10rpx;
    color: #999;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}

.invoice-header-list .price {
    font-size: 36rpx;
    color: #1e6ce8;
}

.invoice-header-list .btn {
    background-color: #1e6ce8;
    color: #fff;
    border: none;
    margin-top: 10rpx;
}

.grids-wrapper {
    background: #f9f9f9;
    padding: 20rpx;
    font-size: 24rpx;
    color: #999;
    border-radius: 15rpx;
    margin-top: 20rpx
}

.card-bottom {
    text-align: right;
    border-top: 1px solid #eee;
    margin-top: 10rpx;
    padding-top: 10rpx;
}

.detail-btn {
    margin-right: 10rpx;
}


.popWrapper{
    padding: 20rpx 30rpx;
    min-width: 600rpx;
  }
  .popWrapper .pop-title{
    font-size: 26rpx;
    color: #333;
    font-weight: 600;
  }
  .popWrapper .pop-sub{
    font-size: 20rpx;
    font-weight:400;
  }
  .popWrapper  .invoice-info-item{
    font-size: 24rpx;
    padding: 6rpx 0;
  }



  /*优惠券*/
.showCoupon{
    z-index: 9999;
  }
   
  .coupons-item{
    color:#fff;
    font-size:30rpx;
    background:linear-gradient(to right,#eb7073,#f4948a);
    margin-top:20px;
    border-radius:5px;
    position:relative;
    height: 100%;
    width: 100%;
    max-height: 100%;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -moz-background-size: 100% 100%;
    overflow: hidden;
  
  }
  .coupons-item.gray {
    color:#fff;
    font-size:30rpx;
    background:linear-gradient(to right,#aaaaaa,#999999);
    margin-top:20px;
    padding-top:10px;
    border-radius:5px;
    position:relative;
  }
  .coupons-item-box{
    width:100%;
  }
  .money-left{
    width: 24%;
    font-size:48rpx;
    float:left;
    text-align:center;
    height:70px;
    line-height:70px;
    color:#F6F6E6
  }
  .money-left text{
    font-size:28rpx;
    padding-right:6px;
  }
  .money-right{
    float:left;
    margin-top:2%;
  }
  .money-name{
    font-size:30rpx;
    padding-bottom:5px;
  }
  .money-hold{
    font-size:28rpx;
    color:#fff;
  }
  .money-data{
    font-size: 18rpx;
    color:#E91240;
    background: #fff;
    padding:0 6rpx;
  }
  .money-remark{
    font-size: 11px;
    margin-top: 5rpx;
  }
  .money-data.gray{
    color:#666;
  }
  .money-home{
    float: right;
    color: #FD1731;
    font-size: 32rpx;
    width: 112rpx;
    margin-top:25px;
    border-radius: 3px;
    margin-right: 5px;
  
    display: flex;
    flex-direction: column;
    align-items: center;
  
  }
  .money-home.gray{
    color:#666;
   
  }
  .gray .money-home{
    color:#333;
    
  }
  .user-btn {
      text-align: center;
      min-height:auto;
      font-size: 28rpx;
      width: 100%!important;
      background: #677CFB;
      color: #fff;
      border-radius: 54rpx;
      margin-top: 10px;
      font-weight: 400;
  }
  /*暂不使用优惠券*/
  .nouserCoupon{
    width: 100%;
    height: 64rpx;
    line-height: 64rpx;
    border: 1px solid #ddd;
    border-radius: 10rpx;
    margin-top: 20px;
    text-align: center;
    font-size: 28rpx;
    color: #333;
  }
  
  .free-txt {
    position: relative;
    display: inline-block;
    font-size: 48rpx!important;
    height: 96rpx;
    line-height: 96rpx;
    width: 96rpx;
    border-radius: 100%;
    border: 2px solid #fff;
    padding: 0!important;
   
    text-align: center;
  }
  .van-icon-add-o{
    position: relative;
    top: 10rpx;
  }



 