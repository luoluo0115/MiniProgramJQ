/*表格*/
.table {
  border: 1px solid #eee;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
  margin-top: 0;
  }
  
  .tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
  }
  
  .th, .td {
  height: 32px;
  line-height: 32px;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
  text-align: center;
  width: 100%;
  font-size:12px;
  }
  
  .th {
  font-weight: 400;
  background-color: #f9f9f9;
  }
  .th0{
    width:15%;
    
  }
  .th1{
    width:15%;
    
  }
  .th2{
    width:20%;
  }
  .th3{
    width:30%;
  }
  .th4{
    width:20%;
  }
  .see-btn{
    width: 45rpx!important;
    font-size: 10px;
  }
  .rowColor{
    background-color: #f9f9f9;
  }
  .item-top{
    display: inline-block
  }
  .item-top .text{
    font-size: 12px;
  }
  /*时间*/
  .picker-date{
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    font-size: 24rpx;
    text-align: center;
    border-radius: 5rpx ;
    color: #666;
    line-height: 30px;
    height: 30px;
    border-bottom:1px solid #eee
  }
  .picker-date icon{
    font-size: 24rpx;
    position: relative;
    margin-top: -10rpx;
    margin-right: 5rpx;
  }
  .item-top{
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    position: relative;
    font-size:12px ;
    color: #666;
    display: block;
  }
  .item-top .label, .picker-date .label{
    flex: 1;
  }
  .item-top .label-right, .picker-date .label-right{
    flex: 2;
  }
  /*时间*/
.picker-date{
  font-size:12px;
  background-color: #1e6ce8;
  width:160px;
  height: 30px;
  line-height: 30px;
  color: #fff;
  padding: 0 7px;
  border-radius:2px;
  text-align: center;
  margin: 0 auto;
}
.picker-date icon{
font-size: 12px;
position: relative;
margin-top: -5px;
margin-right:2px;
}

